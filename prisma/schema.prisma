model Driver {
  id    Int     @id @default(autoincrement())
  name  String
  status Boolean   @default(false)
  warehouseId Int?
  Warehouse Warehouse?  @relation(fields: [warehouseId], references: [id])
}

model Warehouse {
  id    Int     @id @default(autoincrement())
  adresse String   @db.VarChar(255)
  driver Driver[]  
}
